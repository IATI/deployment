# Dump the postgres database
# Encrypt the dump with openssl
pg_dump {{ custom_database_name }} | openssl enc -aes-256-cbc -pass pass:{{ backup_encryption_key }} -p -out {{ backup_directory }}/backup.sql -base64


# Copy media folder from django_dir to the same location where our pg_dump outfile is located
cp -r {{ django_dir }}/media {{ backup_directory }}/media


# Compress the backup directory with gzip
tar -gzf {{ backup_temporary_location }}/$(date +\%Y-\%m-\%d).tar.gzip {{ backup_directory }}
